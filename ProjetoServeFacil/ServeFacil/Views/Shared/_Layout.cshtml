<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,600' rel='stylesheet' type='text/css'>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title ServeFácil</title>
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="description" content="The description of my page" />
</head>
<body>

    <div id="container">
        <header>
@{
    if (Session["UsuarioLogadoID"] != null)
    {
            <nav class="main-menu">
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Prossionais", "Create", "Usuario")</li>
                    <li>@Html.ActionLink("Perfil","Details", "Usuario")</li>
                    <li><a href="#">Ofertar Serviço</a></li>
                    <li class="li-search"><span></span></li>
                   

                    <li class="navbar-right">@Html.ActionLink("Bem vindo(a) " + Session["UsuarioPrimeiroNome"] + "!", "Index", "Usuario")</li>
                    <li style="margin-left: 10px;">@Html.ActionLink("Sair", "Logout", "Usuario")</li>
                </ul>
                </nav>
              <h1><a href="#"></a></h1>
    }
    else
    {
                <nav class="main-menu">
                    <ul>
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Prossionais", "Create", "Usuario")</li>
                        <li>@Html.ActionLink("Prossionais", "Create", "Usuario")</li>
                        <li>@Html.ActionLink("Cadastrar", "Create", "Usuario")</li>

                        <li style="margin-left:115px;">@Html.ActionLink("Entrar", "login", "Usuario")</li>
                    </ul>

                </nav>
            <h1><a href="#"></a></h1>
            <div class="box-login">
                <form method="post" action="#">
                    <input type="text" name="cuser" id="iuser" placeholder="Usuário"><br />
                    <input type="password" name="cpass" id="ipass" placeholder="Senha"><br />
                    <input type="submit" value="Entrar">
                </form>
                <label for="ilogado">
                    <input type="checkbox" name="clogado" id="ilogado" value="logado">Continuar Conectado
                </label>
                <a href="#">Esqueceu sua senha?</a>
                <p class="criar-conta">@Html.ActionLink("Cadastra-se", "Create", "Usuario")</p>
                <span class="seta-login"></span>
            </div>
        }
}
            
        </header>

        @RenderBody()
        <hr />
        <footer>
           
        </footer>


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>

